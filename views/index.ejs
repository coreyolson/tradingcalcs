            background: var(--base-dark);
            color: var(--text-white);
            letter-spacing: 0.2px;
            overflow-x: hidden;
        }
        
        /* Animated Background */
        .aurora-bg {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: -1;
            background: linear-gradient(135deg, #0a0f1a 0%, #1a1f3a 50%, #0a0f1a 100%);
            background-size: 400% 400%;
            animation: auroraShift 20s ease infinite;
        }
        
        @keyframes auroraShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        /* Copper Candle Icon */
        .candle-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto 3rem;
            position: relative;
            animation: float 4s ease-in-out infinite;
        }
        
        .candle-flame {
            fill: var(--copper);
            filter: drop-shadow(0 0 20px var(--copper-glow));
            animation: flicker 2s ease-in-out infinite;
        }
        
        @keyframes flicker {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.85; }
