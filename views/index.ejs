            }
            
            .brand-footer {
                margin-top: 5rem;
                padding: 3rem 0 2rem;
            }
            
            .footer-logo {
                justify-content: center;
                margin-bottom: 1.5rem;
            }
            
            .footer-description {
                text-align: center;
            }
            
            .footer-heading {
                margin-top: 2rem;
                text-align: center;
            }
            
            .footer-links {
                text-align: center;
            }
            
            .container > .text-center.mb-5:first-child {
                padding-top: 3rem;
                margin-bottom: 3rem !important;
            }
            
            .copper-divider {
                margin: 4rem 0;
            }
            
            .hero-calc-card {
                padding: 2rem;
            }
            
            .coming-soon-card {
                padding: 1.5rem;
            }
        }
    </style>
