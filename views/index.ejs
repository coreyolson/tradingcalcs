            --card-dark: #141922;
            --text-white: #eaeaea;
            --text-muted: #9ba1a6;
            --green-glow: #00ff88;
            --cyan-glow: #00d4ff;
            --amber-glow: #fca311;
            --violet-glow: #a855f7;
