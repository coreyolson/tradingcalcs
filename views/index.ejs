        /* Fade-in Animation */
        .fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
            opacity: 0;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .delay-1 { animation-delay: 0.1s; }
        .delay-2 { animation-delay: 0.2s; }
        .delay-3 { animation-delay: 0.3s; }
        .delay-4 { animation-delay: 0.4s; }
        
        /* Mobile Responsive */
        @media (max-width: 768px) {
            .hero-title { 
                font-size: 2.5rem; 
                margin-bottom: 1rem;
            }
            .hero-subtitle { 
                font-size: 1.2rem; 
                margin-bottom: 2rem;
            }
            .cta-main { 
                font-size: 1rem; 
                padding: 1rem 2rem; 
            }
            .candle-icon { 
                width: 80px; 
