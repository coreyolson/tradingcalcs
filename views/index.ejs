    <script src="/personalization.js"></script>
    <script>
        // Populate Personalized Dashboard on Homepage
        document.addEventListener('DOMContentLoaded', function() {
            const profile = PersonalizationEngine.loadProfile();
            
            // Setup hero button to open profile modal
            const heroBtn = document.getElementById('setupProfileBtnHero');
            if (heroBtn) {
                heroBtn.addEventListener('click', function() {
                    const modalEl = document.getElementById('profileSetupModal');
                    if (modalEl) {
                        const modal = new bootstrap.Modal(modalEl);
                        modal.show();
                    }
                });
            }
            
            if (PersonalizationEngine.isProfileComplete()) {
                showPersonalizedDashboard(profile);
                // Hide the setup button, show calculator link instead
                if (heroBtn) {
                    heroBtn.textContent = 'âš¡ Open Calculators';
                    heroBtn.onclick = function() { window.location.href = '/position-sizer'; };
                }
            }
        });
        
        function showPersonalizedDashboard(profile) {
            const dashboard = document.getElementById('personalizedDashboard');
            if (!dashboard) return;
            
            // Show dashboard
            dashboard.style.display = 'block';
            
            // Populate quick stats
            if (profile.accountSize) {
                document.getElementById('dashAccountSize').textContent = '$' + profile.accountSize.toLocaleString();
            }
            
            if (profile.winRate) {
                document.getElementById('dashWinRate').textContent = profile.winRate + '%';
            }
            
            // Calculate and show expectancy
            if (profile.winRate && profile.avgWin && profile.avgLoss) {
                const expectancy = (profile.winRate / 100 * profile.avgWin) - ((100 - profile.winRate) / 100 * profile.avgLoss);
                const expectancyEl = document.getElementById('dashExpectancy');
                expectancyEl.textContent = '$' + expectancy.toFixed(2);
                
                // Color code based on expectancy
                if (expectancy > 0) {
                    expectancyEl.style.color = '#00ff88';
                } else {
                    expectancyEl.style.color = '#ff6b6b';
                }
            }
            
            if (profile.riskPercentPerTrade) {
                document.getElementById('dashRiskPercent').textContent = profile.riskPercentPerTrade + '%';
            }
            
            // Show recommendations
            const recommendations = PersonalizationEngine.getRecommendations();
            if (recommendations.length > 0) {
                document.getElementById('recommendationsPanel').style.display = 'block';
                document.getElementById('noRecommendations').style.display = 'none';
                document.getElementById('recCount').textContent = recommendations.length;
                
                const recList = document.getElementById('recommendationsList');
                recList.innerHTML = recommendations.map(rec => {
                    const iconClass = rec.priority === 'critical' ? 'fa-exclamation-circle' : 
                                     rec.priority === 'high' ? 'fa-exclamation-triangle' : 
                                     rec.priority === 'medium' ? 'fa-info-circle' : 'fa-lightbulb';
                    const iconColor = rec.priority === 'critical' ? '#ff6b6b' : 
                                     rec.priority === 'high' ? '#fca311' : 
                                     rec.priority === 'medium' ? '#00b0ff' : '#9ba1a6';
                    
                    return `
                        <div style="padding: 0.5rem; border-bottom: 1px solid rgba(255,255,255,0.05);">
                            <div style="display: flex; align-items: start; gap: 0.5rem;">
                                <i class="fas ${iconClass}" style="color: ${iconColor}; margin-top: 0.25rem; font-size: 0.8rem;"></i>
                                <div style="flex: 1;">
                                    <div style="color: #fff; font-size: 0.85rem; font-weight: 600; margin-bottom: 0.15rem;">${rec.title}</div>
                                    <div style="color: #9ba1a6; font-size: 0.75rem;">${rec.message}</div>
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
            } else {
                document.getElementById('recommendationsPanel').style.display = 'none';
                document.getElementById('noRecommendations').style.display = 'block';
            }
        }
    </script>
