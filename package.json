{
  "name": "trading-risk-calculator",
  "version": "1.0.0",
  "description": "Trading Business Model Calculator - Risk analysis and visualization for SPY 0DTE options trading",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "server.js",
      "public/**/*.js",
      "!public/**/*.test.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 62,
        "lines": 80,
        "statements": 79
      },
      "./server.js": {
        "branches": 91,
        "functions": 89,
        "lines": 96,
        "statements": 96
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jsdom|parse5)/)"
    ]
  },
  "keywords": [
    "trading",
    "risk-calculator",
    "options",
    "expectancy",
    "monte-carlo"
  ],
  "author": "Corey Olson",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
